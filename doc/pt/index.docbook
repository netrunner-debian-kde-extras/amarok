<sect1 id="database"
><title
>Base de Dados</title
> 
<para>
<screenshot>
<screeninfo
></screeninfo>
  <mediaobject>
    <imageobject>
      <imagedata fileref="amarok2-4-1databaseconfig.png" format="PNG"/>
    </imageobject>
